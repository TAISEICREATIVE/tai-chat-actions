{
  "openapi": "3.0.0",
  "info": {
    "title": "Tai - Asistente de Estrategias de Marketing",
    "version": "1.0.0",
    "description": "API para consultar campa\u00f1as, automatizar tareas, analizar SEO, generar documentos, consultar tendencias, optimizar campa\u00f1as de ads y acceder a plantillas de marketing."
  },
  "paths": {
    "/consultar-campanas": {
      "get": {
        "summary": "Consultar campa\u00f1as de marketing",
        "description": "Obtener detalles de campa\u00f1as recientes o activas en el CRM.",
        "parameters": [
          {
            "in": "query",
            "name": "tipo",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "email_marketing",
                "ads",
                "afiliados",
                "redes_sociales"
              ]
            },
            "description": "Tipo de campa\u00f1a que se desea consultar."
          },
          {
            "in": "query",
            "name": "fecha_inicio",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Fecha de inicio de la b\u00fasqueda."
          },
          {
            "in": "query",
            "name": "fecha_fin",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Fecha de fin de la b\u00fasqueda."
          }
        ],
        "responses": {
          "200": {
            "description": "Resultados exitosos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "campa\u00f1as": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "nombre": {
                            "type": "string"
                          },
                          "estado": {
                            "type": "string"
                          },
                          "fecha_inicio": {
                            "type": "string",
                            "format": "date"
                          },
                          "fecha_fin": {
                            "type": "string",
                            "format": "date"
                          },
                          "rendimiento": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/automatizar-tarea": {
      "post": {
        "summary": "Automatizar tarea",
        "description": "Crear tareas en plataformas externas de gesti\u00f3n o automatizaci\u00f3n.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "plataforma": {
                    "type": "string"
                  },
                  "tarea": {
                    "type": "string"
                  },
                  "fecha_entrega": {
                    "type": "string",
                    "format": "date"
                  },
                  "prioridad": {
                    "type": "string",
                    "enum": [
                      "baja",
                      "media",
                      "alta"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Tarea creada exitosamente."
          },
          "400": {
            "description": "Error en los datos enviados."
          },
          "500": {
            "description": "Error del servidor."
          }
        }
      }
    },
    "/analizar-seo": {
      "get": {
        "summary": "Analizar sitio web para SEO",
        "description": "Obtener an\u00e1lisis b\u00e1sico de optimizaci\u00f3n SEO de un sitio web.",
        "parameters": [
          {
            "in": "query",
            "name": "url",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "URL del sitio web a analizar."
          }
        ],
        "responses": {
          "200": {
            "description": "An\u00e1lisis exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "recomendaciones": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/generar-documento": {
      "post": {
        "summary": "Generar documento de estrategia o contenido",
        "description": "Crear documentos de estrategias, planes o reportes de marketing.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tipo_documento": {
                    "type": "string",
                    "enum": [
                      "calendario",
                      "plan_estrategico",
                      "reporte_campa\u00f1a"
                    ]
                  },
                  "detalles": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Documento creado exitosamente."
          },
          "400": {
            "description": "Error en los datos enviados."
          },
          "500": {
            "description": "Error del servidor."
          }
        }
      }
    },
    "/consultar-tendencias": {
      "get": {
        "summary": "Consultar tendencias en tiempo real",
        "description": "Buscar temas, hashtags o tendencias actuales.",
        "parameters": [
          {
            "in": "query",
            "name": "categoria",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Categor\u00eda opcional para filtrar tendencias (ej.: marketing, tecnolog\u00eda)."
          }
        ],
        "responses": {
          "200": {
            "description": "Consulta exitosa",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tendencias": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    },
    "/optimizar-campanas": {
      "post": {
        "summary": "Optimizar campa\u00f1as de publicidad",
        "description": "Sugerir mejoras para campa\u00f1as activas basadas en sus datos de rendimiento.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id_campana": {
                    "type": "string"
                  },
                  "plataforma": {
                    "type": "string",
                    "enum": [
                      "google_ads",
                      "meta_ads",
                      "tiktok_ads"
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Recomendaciones de optimizaci\u00f3n enviadas."
          },
          "400": {
            "description": "Error en los datos enviados."
          },
          "500": {
            "description": "Error del servidor."
          }
        }
      }
    },
    "/acceder-plantillas": {
      "get": {
        "summary": "Acceder a plantillas de marketing",
        "description": "Obtener plantillas o ideas listas para marketing y contenido.",
        "parameters": [
          {
            "in": "query",
            "name": "tipo",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Tipo de plantilla que se desea consultar (ej.: calendario, email, landing page)."
          }
        ],
        "responses": {
          "200": {
            "description": "Plantillas encontradas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "plantillas": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Solicitud incorrecta"
          },
          "500": {
            "description": "Error del servidor"
          }
        }
      }
    }
  }
}